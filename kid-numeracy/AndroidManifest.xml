<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="au.edu.adelaide.mci.kidnumeracy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CountLearnActivity"
            android:label="@string/title_activity_count_learn"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".AddLearningActivity"
            android:label="@string/title_activity_add_learning"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".SubtractLearningActivity"
            android:label="@string/title_activity_subtract_learning"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".CountTestActivity"
            android:label="@string/title_activity_count_test"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".CountUpDownLearnActivity"
            android:label="@string/title_activity_count_up_down_learn"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".CountRulerLearningActivity"
            android:label="@string/title_activity_count_ruler_learning"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".PuzzleTestTouchActivity"
            android:label="@string/title_activity_puzzle_test_touch"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".TestMenuActivity"
            android:label="@string/title_activity_test_menu"
            android:screenOrientation="landscape" >
        </activity>

        <service android:name=".MusicService" >
        </service>

        <activity
            android:name=".CountObjectTestActivity"
            android:label="@string/title_activity_count_object_test"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>
