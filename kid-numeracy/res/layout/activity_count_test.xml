<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_count_test_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/background_wood_brown"
    tools:context=".CountTestActivity" >

    <GridView
        android:id="@+id/gvPuzzle"
        android:layout_width="800dp"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"        
        android:gravity="fill"
        android:horizontalSpacing="0dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0dp"
        android:background="@drawable/backgroud_grid_gold" >
    </GridView>

    <LinearLayout
        android:id="@+id/ll_nums"
        android:layout_width="265dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:layout_marginLeft="50dp"
        android:padding="0dp"             
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivNum1"
            android:layout_width="fill_parent"
            android:layout_height="500px"
	        android:layout_margin="0dp"
	        android:padding="0dp"                 
            android:src="@drawable/n1"
            android:onClick="onBtnNumChoose" />

        <ImageView
            android:id="@+id/ivNum2"
            android:layout_width="fill_parent"
            android:layout_height="500px"
	        android:layout_margin="0dp"
	        android:padding="0dp"              
            android:src="@drawable/n2"
            android:onClick="onBtnNumChoose"/>

        <ImageView
            android:id="@+id/ivNum3"
            android:layout_width="fill_parent"
            android:layout_height="500px"
	        android:layout_margin="0dp"
	        android:padding="0dp"              
            android:onClick="onBtnNumChoose"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:layout_margin="0dp" >

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:onClick="onBackClick"
            android:src="@drawable/arrow_left" />
        <ImageButton
            android:id="@+id/ibRestart"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:onClick="onRestartClick"                        
            android:src="@drawable/kn_restart" />
        
    </RelativeLayout>

</LinearLayout>
